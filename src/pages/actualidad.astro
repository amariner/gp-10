			.container{max-width:1600px;margin:0 auto}
			.px16{padding-left:16px;padding-right:16px}
			.px20{padding-left:20px;padding-right:20px}
			.py12{padding-top:48px;padding-bottom:48px}
			.py16{padding-top:64px;padding-bottom:64px}
			.py5{padding-top:20px;padding-bottom:20px}
			.py0{padding-top:0;padding-bottom:0}
			.mt24{margin-top:24px}
			.mb0{margin-bottom:0}
			.center{text-align:center}
			.uppercase{text-transform:uppercase}
			.grid{display:grid;gap:24px}
			.grid-4{grid-template-columns:repeat(4,minmax(0,1fr))}
			.row{display:flex;gap:24px}
			.between{display:flex;justify-content:space-between;align-items:center}
			header.site-header{position:sticky;top:0;height:86px;display:flex;align-items:center;justify-content:center;z-index:10;background:#fff}
			header.site-header .bar{height:86px;border-bottom:1px solid var(--c-grey-84);display:flex;align-items:center;justify-content:center}
			header .logo{font-family:"Porcelanosa",serif;font-weight:400;font-size:32px;line-height:64px;letter-spacing:.02em;color:#000}
			.section-title{font-weight:700;color:var(--c-grey-16);font-size:24px;line-height:1.5}
			.section-sub{color:var(--c-grey-46);font-size:18px;line-height:1.5}
			.card figure{aspect-ratio:16/11;background:#eee;overflow:hidden;margin:0}
			.card figure img{width:100%;height:100%;object-fit:cover;display:block}
			.card .meta{display:flex;gap:8px;color:var(--c-grey-46);font-size:14px}
			.card .title{font-weight:700;color:#000;text-transform:uppercase;font-size:18px}
			.cta-block{display:flex;gap:48px;align-items:flex-end;justify-content:center}
			.cta-block .image{width:600px;max-width:100%;aspect-ratio:1/1;background-size:cover;background-position:center}
			.cta-block .copy{width:600px;max-width:100%}
			.link-stroke{height:50px;display:grid;place-items:center;padding:0 22px;border:2px solid #000}
			footer.site-footer{border-top:1px solid var(--c-grey-84)}
			.footer-top{border-bottom:1px solid var(--c-grey-84)}
			.footer-menu{display:flex;gap:16px}
			.footer-menu a{font-weight:700;font-size:16px;line-height:26px;color:#767676;text-decoration:none;text-transform:uppercase}
			.social{display:flex;gap:12px}
			.social .dot{height:32px;width:32px;border-radius:16px;background:#000;display:grid;place-items:center}
			.copyright{color:var(--c-grey-100);font-size:12.8px}
			.brandmark{height:140px;width:190px;margin:0 auto}
			.underline{position:relative;display:inline-block}
			.underline:after{content:"";position:absolute;left:0;right:0;bottom:-1px;height:1px;background:#000}
			.news-grid{display:flex;gap:24px;overflow-x:auto;padding-bottom:16px}
			.news-card{flex:0 0 517px;display:flex;flex-direction:column;gap:8px}
			.news-card figure{aspect-ratio:16/11;background:#eee;overflow:hidden;margin:0}
			.news-card figure img{width:100%;height:100%;object-fit:cover;display:block}
			.news-card .meta{display:flex;gap:8px;color:var(--c-grey-46);font-size:14px;align-items:center}
			.news-card .title{font-weight:700;color:#000;text-transform:uppercase;font-size:18px}
			.event-section{margin-bottom:48px}
			.event-header{display:flex;justify-content:space-between;align-items:center;border-bottom:1px solid #000;padding-bottom:8px;margin-bottom:24px}
			.event-title{font-weight:700;font-size:18px;text-transform:uppercase}
			.event-link{display:flex;align-items:center;gap:8px;color:var(--c-grey-46);font-weight:700;font-size:16px;text-transform:uppercase;text-decoration:none}
			.event-link:hover{color:#000}
			.event-grid{display:flex;gap:24px;overflow-x:auto;padding-bottom:16px}
			.event-card{flex:0 0 382px;display:flex;flex-direction:column;gap:8px}
			.event-card figure{aspect-ratio:1/1;background:#eee;overflow:hidden;margin:0}
			.event-card figure img{width:100%;height:100%;object-fit:cover;display:block}
			.event-card .title{font-weight:700;color:var(--c-grey-46);text-transform:uppercase;font-size:18px;text-align:center}
			/* Simple responsive adjustments */
			@media (max-width: 1200px){
				.grid-4{grid-template-columns:repeat(2,minmax(0,1fr))}
				.cta-block{flex-direction:column;align-items:center}
				.news-grid{flex-direction:column;overflow:visible}
				.news-card{flex:1}
				.event-grid{flex-direction:column;overflow:visible}
				.event-card{flex:1}
			}
			@media (max-width: 680px){
				.grid-4{grid-template-columns:1fr}
				.news-card{flex:1}
				.event-card{flex:1}
			}
