			.related-card figure img{width:100%;height:100%;object-fit:cover;display:block}
			.related-card .meta{display:flex;gap:8px;color:var(--c-grey-46);font-size:14px}
			.related-card .title{font-weight:700;color:#000;text-transform:uppercase;font-size:18px}
			/* Simple responsive adjustments */
